
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="navbar_login">
    <div>
      <%= link_to root_path do %>
        <i class="fa fa-arrow-left fa-10x" aria-hidden="true"></i>
        <% end %>
    </div>
    <h2>REGISTER</h2>
    <div class="actions login_actions">
      <%= f.submit "Next", class:"login_button" %>
    </div>
  </DIV>
  <div class="field">
    <%= f.text_field :name, placeholder:"Full name", autocomplete: "name", class:"session_input" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class:"session_input" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"Password (6 characters minimum)", autocomplete: "new-password", class:"session_input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"Confirm Password", autocomplete: "new-password", class:"session_input" %>
  </div>

<% end %>
