
<div class="transactions_page">
  <div class="navbar_login">
    <div>
      <%= link_to root_path do %>
        <i class="fa fa-bars" aria-hidden="true"></i>
        <% end %>
    </div>
    
    <h2>TRANSACTIONS</h2>

    <%if user_signed_in?%>
      <div class="login_actions"><%= button_to "Sign out",
        destroy_user_session_path,
        method: :delete,
        data:{turbo:false},
        class:"login_button" %>
      </div>
    <% end %>
  </div>
  <p style="color: green"><%= notice %></p>

  <div id="groups">
    <% @groups.includes([:performance]).each do |group| %>
      <%= render group %>
    <% end %>
  </div>

  <div class="new_group">
    <%= link_to "NEW TRANSACTION GROUP", new_group_path %>
  </div>
</div>
