<%= form_with(model: performance, url: group_performances_path) do |form| %>
  <% if performance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(performance.errors.count, "error") %> prohibited this performance from being saved:</h2>

      <ul>
        <% performance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :name, required: true, placeholder: "Name", class:"session_input" %>
  </div>

  <div>
    <%= form.text_field :amount, required: true, placeholder: "Amount", class:"session_input" %>
  </div>

  <div class="chose_groups">
    <%@groups.each do |budget|%>
      <div class="chose_group">
        <p><%= check_box_tag "budget_ids[]", budget.id, budget.id == @group.id  %><%= budget.name %></p>
      </div>
    <%end%>
  </div>

  <div class="save_div">
    <%= form.submit "SAVE", class:"save_button" %>
  </div>
<% end %>
