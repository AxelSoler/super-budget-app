<div class="performances_page">
  <div class="navbar_login">
    <div>
      <%= link_to groups_path do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        <% end %>
    </div>
    
    <h2>DETAILS</h2>

    <%if user_signed_in?%>
      <div class="login_actions"><%= button_to "Sign out",
        destroy_user_session_path,
        method: :delete,
        data:{turbo:false},
        class:"login_button" %>
      </div>
    <% end %>
  </div>
  <p style="color: green"><%= notice %></p>


  <div id="performances">
    <h3>Total amount: $<%= @performances.sum{ |performance| performance.amount } %></h3>
    <% @performances.each do |performance| %>
      <%= render performance %>
    <% end %>
  </div>

  <div class="new_group">
    <%= link_to "add a new transaction", new_group_performance_path %>
  </div>
</div>